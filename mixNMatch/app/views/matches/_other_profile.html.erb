<!-- pass in @match and @your_profile-->
<%if match.profile2.id == @your_profile.id%>
  <%p = match.profile1%>
<%else%>
  <%p = match.profile2%>
<%end%>

<div class="match-profile" profile_id=<%=p.id%>>
  <div class="center">
      <h3><%= p.first %></h3>
      <%= image_tag p.getPicture() %>
  </div>
  <p>
    Age: <%= p.age %><br>
    Song: <%= p.song %>
  </p>
  <p>
    <%= p.description %>
  </p>
  <%if match.status1 == 1 && match.status2 == 1%>
    <p>
      <%= p.contact_info %>
    </p>
  <%else%>
    <%if match.profile2.id == @your_profile.id%>
      <%= button_to 'Accept Match', matches_update_status_path(:match => {:id => match.id, :status2 => 1}), class:"button is-danger", remote: false %>
      <%= button_to 'Reject Match', matches_update_status_path(:match => {:id => match.id, :status2 => 2}), class:"button is-danger", remote: false %>
    <%else%>
      <%= button_to 'Accept Match', matches_update_status_path(:match => {:id => match.id, :status1 => 1}), class:"button is-danger", remote: false %>
      <%= button_to 'Reject Match', matches_update_status_path(:match => {:id => match.id, :status1 => 2}), class:"button is-danger", remote: false %>
    <%end%>
  <%end%>
  

</div>
