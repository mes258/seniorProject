<h1>View Your Match</h1>

<div>
    <% if @inValid %>
        <h2> cannot access this page. </h2>
    <% else %>
        <p>
            <strong> match status: </strong>
            <%= Match.statusMap(@match[:status]) %>
        </p

        <p>
            <h3> <%= @otherProfile.first %>'s Profile </h4>
            <p>
                <strong>Name:</strong>
                <%= @otherProfile.fullName() %>
            </p>
            <p>
                <strong>Description: </strong>
                <%= @otherProfile[:description] %>
            </p>
            <p>
                <strong>Song: </strong>
                <%= @otherProfile[:song] %>
            </p>
            <p>
                <strong>Preference: </strong>
                <%= Profile.preferenceMap(@otherProfile.preference) %>
            </p>
            <p>
                <strong>Gender: </strong>
                <%= Profile.genderMap(@otherProfile.gender) %>
            </p>
            <p>
                <strong>Value: </strong>
                <%= @otherProfile[:value] %>
            </p>
            <p>
                <strong>Priority: </strong>
                <%= @otherProfile[:priority] %>
            </p>
        </p>
        <%= link_to 'Accept Match', matches_update_status_path(:id => @match.id, :status => 1), class:"button is-danger", remote: true %>
        <%= link_to 'Reject Match', matches_update_status_path(:id => @match.id, :status => 2), class:"button is-danger", remote: true %>

    <% end %>



</div>

<%= link_to 'Back', matches_path %>
