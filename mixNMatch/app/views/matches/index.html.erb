<p id="notice"><%= notice %></p>

<h1>Your Matches</h1>
we should update this to use the same profile format as the profiles index<br><br><br>
<table>
  <thead>
    <tr>
      <!--<th>ID</th>-->
      <th>#</th>
      <th>profile</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%#if there are mutual accepts%>
    <h2>Mutual Accepts:</h2>
    <ul>
        <% @matches.each do |match| %>
          <li>
            <%if match.profile2.id == @your_profile.id%>
              <%= render 'profiles/widget', profile: match.profile1 %>
            <%else%>
              <%= render 'profiles/widget', profile: match.profile2 %>
            <%end%>
          </li>
        <% end %>
    </ul>
  <%#end%>

  <!-- we should have a feild in profile for a message to show successful matches -->
  <!-- message with contact info of their choice, not necessarily their email -->

  <!-- show matches that current_user has not made a decision about -->
  <h2>Suggested Matches:</h2>
  <ul>
    <% @matches.each do |match| %>
      <li>
        <%= render 'matches/other_profile', match: match, current_user: @current_user %>
      </li>
    <% end %>
  </ul>
  

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <!--<td><%= match.id %></td>-->
        <td><%= match.user_matches.count %></td>
        <%if match.profile2.id == @your_profile.id%>
          <td><%= match.profile1.first %></td>
          <td><%= Match.statusMap(match.status2) %></td>
        <%else%>
          <td><%= match.profile2.first %></td>
          <td><%= Match.statusMap(match.status1) %></td>
        <%end%>
        <td><%= link_to 'Show Match Info', match %></td>
      </tr>
    <% end %>
  </tbody>
</table>
