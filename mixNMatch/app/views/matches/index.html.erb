<p id="notice"><%= notice %></p>

<h1>Matches</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Profile1</th>
      <th>profile2 </th>
      <th>Status </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.id %></td>
        <td><%= match.users.ids %></td>
        <td><%= match.profile1.first %> <%= match.profile1.last %></td>
        <td><%= match.profile2.first %> <%= match.profile2.last %></td>
        <td><%= Match.statusMap(match.status) %><td>
        <td><%= link_to 'Show', match %></td>
        <!-- <td><%= link_to 'Edit', edit_match_path(match) %></td> -->
        <!-- <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

