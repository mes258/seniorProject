<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<% if @match_status.present? %>
  <%= @match_status %>
<% end %>

<%= render 'matches/form', match: Match.new %>

<div class="profiles_grid">
  <% @profiles.each do |profile| %>
    <div class="profile">
      <div class="center">
          <br>
          <h3><%= profile.first %></h3>
          <%= image_tag(profile.getPicture()) %>
      </div>
      
      <p>
        <%= profile.id %>
        <%= profile.description %>
      </p>
    </div>
  <% end %>
</div>

