<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<% if @match_status.present? %>
  <%= @match_status %>
<% end %>

<%= render 'matches/form', match: Match.new %>

<div class="profiles_grid">
  <% @profiles.each do |profile| %>
    <div class="profile" profile_id=<%=profile.id%>>
      <div class="center">
          <br>
          <h3><%= profile.first %></h3>
          <%= image_tag(profile.getPicture()) %>
      </div>
      <p>
        Preference: <%= Profile.preferenceMap(profile.preference) %>
      </p>
      <p>
        <%= profile.id %>
        <%= profile.description %>
      </p>
    </div>
  <% end %>
</div>

<script src="/assets/make_matches.js" type="text/javascript"></script>