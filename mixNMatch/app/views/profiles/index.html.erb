<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name  </th>
      <th>Description </th>
      <th>Song </th>
      <th>Preference </th>
      <th>Gender </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.fullName %></td>
        <td><%= profile.description %></td>
        <td><%= profile.song %></td>
        <td><%= Profile.preferenceMap(profile.preference) %></td>
        <td><%= Profile.genderMap(profile.gender) %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>

<% @profiles.each do |profile| %>
  <div class="profile">
    <h3><%= profile.fullName %></h3><br>
    <p>
      <%= profile.description %>
    </p>
  </div>
<% end %>
