<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<% if @match_status.present? %>
  <%= @match_status %>
<% end %>

<% @profiles.each do |profile| %>
  <div class="profile">
    <h3><%= profile.fullName %></h3><br>
    <p>
      <%= profile.description %>
    </p>
  </div>
<% end %>

<%= render 'matches/form', match: Match.new %>

